<?xml version="1.0" encoding="UTF-8" ?>
  <XMLDB PATH="blocks/reactions/db" VERSION="20191207" COMMENT="XMLDB file for Moodle blocks/reactions">
    <TABLES>
      <TABLE NAME="block_reactions" COMMENT="List of existing reactions">
        <FIELDS>
          <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" />
          <FIELD NAME="name" TYPE="text" LENGTH="32" NOTNULL="true" SEQUENCE="false" />
        </FIELDS>
        <KEYS>
          <KEY NAME="primary" TYPE="primary" FIELDS="id" />
        </KEYS>
      </TABLE>
      <TABLE NAME="block_reactions_posts" COMMENT="List of who reacted to which post">
        <FIELDS>
          <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" />
          <FIELD NAME="reactionid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" />
          <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" />
          <FIELD NAME="postid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" />
        </FIELDS>
        <KEYS>
          <KEY NAME="primary" TYPE="primary" FIELDS="id" />
          <KEY NAME="reactionid" TYPE="foreign" FIELDS="reactionid" REFTABLE="block_reactions" REFFIELDS="id"/>
          <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
          <KEY NAME="postid" TYPE="foreign" FIELDS="postid" REFTABLE="forum_posts" REFFIELDS="id"/>
        </KEYS>
        <INDEXES>
          <INDEX NAME="postid" UNIQUE="true" FIELDS="postid"/>
        </INDEXES>
      </TABLE>
    </TABLES>
  </XMLDB>
